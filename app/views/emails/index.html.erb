<%= snackbar_notifications(notice, alert).html_safe %>

<h1 class="<%= get_style_classes('h1-title')%>" >Emails</h1>

<table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
  <thead>
    <tr>
      <th>Schedule</th>
      <th>Title</th>
      <th>Sender</th>
      <th>Groups</th>
      <th>Sent?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email.schedule %></td>
        <td><%= email.title %></td>
        <td><%= email.sender.email %></td>
        <td><%= email.groups.map { |g| g.name }.join(', ') %></td>
        <td><%= email.sent? ? 'yes' : 'no' %></td>
        <td><%= link_to 'Show', email %></td>
        <td><%= link_to 'Edit', edit_email_path(email) %></td>
        <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Email', new_email_path, class:get_style_classes('btn-new') %>
