<%= form_with(model: group, local: true) do |form| %>
  <% if group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field <%= get_style_classes('form-input-div') %>">
    <%= form.label :name, class: get_style_classes('form-label-text-input') %>
    <%= form.text_field :name, id: :group_name, class: get_style_classes('form-text-input') %>
  </div>

  <div class="field <%= get_style_classes('form-input-div') %>">
    <%= form.label :private, class: get_style_classes('form-label-checkbox-input') do %>
      <%= form.check_box :private, id: :group_private, class: get_style_classes('form-checkbox-input'), checked: true %>
      <span class="field <%= get_style_classes('form-span-label-checkbox-input') %>">Private</span><!-- TODO: Tirar esse label hardcoded -->
    <% end %>
  </div>


  <div class="actions">
    <%= form.submit :class => get_style_classes('form-submit') %>
  </div>
<% end %>
