<%= snackbar_notifications(notice, alert).html_safe %>

<h1 class="<%= get_style_classes('h1-title')%>" >Groups</h1>

<table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
  <thead>
    <tr>
      <th>Name</th>
      <th>Private</th>
      <th>Sender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.active.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.private %></td>
        <td><%= group.sender.email %></td>
        <td><%= link_to 'Show', group, class:get_style_classes('btn-show') %></td>
        <td><%= link_to 'Edit', edit_group_path(group), class: get_style_classes('btn-edit') %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }, class: get_style_classes('btn-destroy') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path, class: get_style_classes('btn-new') %>
